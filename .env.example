TERMII_SECRET_KEY=sk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# WHATSAPP BUSINESS API
# Get from: https://developers.facebook.com â†’ Your App â†’ WhatsApp
# ============================================
WHATSAPP_PHONE_NUMBER_ID=123456789012345
WHATSAPP_BUSINESS_ACCOUNT_ID=123456789012345
WHATSAPP_ACCESS_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-custom-verify-token
WHATSAPP_APP_SECRET=your-app-secret

# ============================================
# CLOUDINARY (Image Storage)
# Get from: https://cloudinary.com/console
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# SECURITY (Generate your own!)
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# ============================================
JWT_SECRET=generate-a-random-32-byte-base64-string
ENCRYPTION_KEY=generate-a-random-32-byte-hex-string
SESSION_SECRET=generate-a-random-32-byte-base64-string

# ============================================
# OTP & PIN SETTINGS
# ============================================
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6
PIN_MAX_ATTEMPTS=5
PIN_LOCKOUT_MINUTES=15

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
OTP_RATE_LIMIT_WINDOW_MS=60000
OTP_RATE_LIMIT_MAX_REQUESTS=3

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_WHATSAPP_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_OFFLINE_MODE=true
ENABLE_DELIVERY_TRACKING=true
ENABLE_INVENTORY_ALERTS=true
ENABLE_MULTI_STORE=true

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry - Error Tracking (https://sentry.io)
SENTRY_DSN=https://xxx@o123456.ingest.sentry.io/1234567

# Plausible - Analytics (https://plausible.io)
PLAUSIBLE_DOMAIN=warehousepos.com

# LogRocket - Session Replay (https://logrocket.com)
LOGROCKET_APP_ID=your-org/warehousepos

# ============================================
# DEVELOPMENT ONLY
# Set DEV_BYPASS_SMS=true to log OTPs to console instead of sending SMS
# ============================================
DEV_BYPASS_SMS=false
DEV_DEFAULT_OTP=123456
